# ========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ========================================
# ⚠️  WARNING: Never commit this file to git!
# ⚠️  Replace all placeholder values with real credentials

# ========================================
# DATABASE CONFIGURATION (MySQL)
# ========================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=tool_creator_prod
DB_PASSWORD=YOUR_STRONG_DB_PASSWORD_HERE
DB_NAME=tool_creator_prod

# ========================================
# AI API KEYS
# ========================================
# Get from: https://platform.openai.com/api-keys
API_KEY=sk-your-openai-api-key-here

# Get from: https://makersuite.google.com/app/apikey
GEMINI_KEY=your-gemini-api-key-here

# ========================================
# GOOGLE CLOUD CONFIGURATION
# ========================================
# Path to Google Cloud service account JSON file
GOOGLE_APPLICATION_CREDENTIALS=./data/google_cloud_tts_api.json

# ========================================
# GOOGLE OAUTH2 CONFIGURATION
# ========================================
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
# Update this with your production domain
GOOGLE_REDIRECT_URL=https://yourdomain.com/auth/google/callback

# ========================================
# JWT CONFIGURATION
# ========================================
# Generate a strong random string (64+ characters)
JWTACCESSKEY=your-super-secure-jwt-secret-key-here-minimum-64-characters

# ========================================
# SERVER CONFIGURATION
# ========================================
PORT=8888
ENV=production

# ========================================
# RATE LIMITING
# ========================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=15m

# ========================================
# REDIS CONFIGURATION
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password-here

# ========================================
# STORAGE CONFIGURATION
# ========================================
STORAGE_PATH=/app/storage
MODELS_PATH=/app/pretrained_models

# ========================================
# QUEUE CONFIGURATION
# ========================================
QUEUE_WORKERS=2
QUEUE_TIMEOUT=1800

# ========================================
# DOMAIN CONFIGURATION
# ========================================
DOMAIN=yourdomain.com
API_URL=https://yourdomain.com/api

# ========================================
# SECURITY CONFIGURATION
# ========================================
# CORS origins (comma-separated)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ========================================
# MONITORING CONFIGURATION
# ========================================
# Log level: debug, info, warn, error
LOG_LEVEL=info

# ========================================
# BACKUP CONFIGURATION
# ========================================
# Database backup retention (days)
BACKUP_RETENTION_DAYS=30
# Backup schedule (cron format)
BACKUP_SCHEDULE="0 2 * * *" 